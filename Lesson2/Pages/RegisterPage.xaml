<Page x:Class="Lesson2.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RegisterPage">
    <Grid Background="#EEE">
        <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <StackPanel DockPanel.Dock="Top" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <TextBlock Text="Создайте аккаунт" FontSize="24" Margin="0,0,0,20" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBox x:Name="UsernameBox" Height="40" Margin="10" />
                <PasswordBox x:Name="PasswordBox" Height="40" Margin="10" />
                <Button Content="Регистрация" Height="40" Margin="10" Click="Register_Click" Style="{StaticResource AccentButtonStyle}"/>
            </StackPanel>
            <Button DockPanel.Dock="Bottom" Content="Если у вас уже есть аккаунт" 
                    Margin="0,0,10,10" HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" Width="200" Height="25" 
                    Click="LoginPage_Click" FontSize="10" Padding="5"/>
        </DockPanel>
    </Grid>
</Page>
